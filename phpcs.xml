<?xml version="1.0"?>
<ruleset name="PHP Project 9">
    <description>Coding standard for Hexlet PHP Project 9</description>

    <!-- Проверять все PHP файлы в проекте -->
    <file>src</file>
    <file>public</file>
    <file>tests</file>

    <!-- Игнорировать папки vendor и cache -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>cache/*</exclude-pattern>

    <!-- Использовать стандарт PSR12 -->
    <rule ref="PSR12"/>
</ruleset>